{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["**/PDK.*.csproj"],
          "src": "src"
        }
      ],
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["index.md", "docs/**/*.md", "docs/**/toc.yml", "*.md", "toc.yml"],
        "exclude": ["docs/Sprints/**", "BenchmarkDotNet.Artifacts/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "PDK",
      "_appTitle": "Pipeline Development Kit",
      "_appFooter": "PDK - Run CI/CD pipelines locally",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "fileMetadata": {},
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": false
  }
}
